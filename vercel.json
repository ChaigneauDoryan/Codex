{
  "version": 2,
  "builds": [
    {
      "src": "api/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/src/main.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}