{
  "build": {
    "env": {}
  },
  "functions": {
    "api/dist/main.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/dist/main.js"
    }
  ],
  "installCommand": "npm install --prefix ./client && npm install --prefix ./api",
  "buildCommand": "npm run build --prefix ./client && npm run build --prefix ./api",
  "outputDirectory": "client/.next"
}