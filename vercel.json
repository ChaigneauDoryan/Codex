{
  "installCommand": "npm install --prefix ./client && npm install --prefix ./api",
  "buildCommand": "npm run build --prefix ./client && npm run build --prefix ./api",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api"
    },
    {
      "src": "/(.*)",
      "dest": "client"
    }
  ]
}